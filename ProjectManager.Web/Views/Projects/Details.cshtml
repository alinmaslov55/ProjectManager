@using ProjectManager.Web.ViewModels
@model ProjectDetailsViewModel

@{
    ViewData["Title"] = "Project Details";
}

<h2>@Model.Project.Title</h2>
<p>@Model.Project.Description</p>

<hr/>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Status</th>
            <th>Due Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Status</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>
                    <a asp-controller="Tasks" asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-controller="Tasks" asp-action="Delete" asp-route-id="@task.Id" method="post" style="display:inline">
                        <input type="hidden" name="projectId" value="@Model.Project.Id" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Project.Id" class="btn btn-warning">Edit Project</a>
    <a asp-controller="Tasks" asp-action="Create" asp-route-projectId="@Model.Project.Id" class="btn btn-primary mb-3">Add Task</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>